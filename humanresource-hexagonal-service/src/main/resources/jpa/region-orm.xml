<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                    http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
                 version="2.0">

    <description>Region JPA Mapping</description>
    <package>br.com.hrs.core.model</package>
    <entity class="br.com.hrs.core.model.Region" name="Region" cacheable="true">
        <table name="REGIONS"/>
        <attributes>
            <id name="id">
                <column name="REGION_ID"/>
                <generated-value strategy="IDENTITY"/>
            </id>
            <basic name="name">
                <column name="REGION_NAME"/>
            </basic>
            <one-to-many name="countries" fetch="LAZY" orphan-removal="true" target-entity="br.com.hrs.core.model.Country" mapped-by="region">
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>
        </attributes>
    </entity>
</entity-mappings>